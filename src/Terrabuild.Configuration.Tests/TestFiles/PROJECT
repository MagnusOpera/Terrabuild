extension @dotnet {
  defaults = { # comment at end of line
    configuration : $configuration
  }
}

extension @docker {
  defaults = {
    configuration: $configuration
    image : "ghcr.io/magnusopera/dotnet-app"
  }

  variables = [ "ARM_TENANT_ID" ]
}

extension dummy {
    script = "dummy.fsx"
}

# comment in the middle of the file

project shell_app @dotnet {
  dependencies = [ shell_lib ]
  outputs = [ "dist" ]
  labels = [ "app"
             "dotnet" ]
}

target build {
  depends_on = [ dist ]

  @dotnet build
}

target dist {
  @dotnet build
  @dotnet publish { }
}

target docker {
  rebuild = false
  @shell echo { arguments: trim("building project1 " + $configuration) }
  @docker build { arguments: { config: "Release" } }
}


