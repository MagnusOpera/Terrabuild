
project deploy_apps @terraform {
    dependencies = [ dotnet_app
                     npm_app ]
    labels = [ "infra" ]
}

target build {
    rebuild = true
    @terraform plan { 
        variables: { dotnet_app_version: version(dotnet_app)
                     npm_app_version: version(npm_app) }
    }
}

target deploy {
    @terraform apply { }
}
