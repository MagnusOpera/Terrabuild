
project @terraform {
    dependencies = [ "/projects/dotnet-app"
                     "../../projects/npm-app" ]
    ignores = [ "deploy.log" ]
    labels = [ "infra" ]
}

target build {
    @terraform plan { 
        variables = { dotnet_app_version: version("/projects/dotnet-app")
                     npm_app_version: version("../../projects/npm-app") }
    }
}

target deploy {
    @terraform apply { }
}
