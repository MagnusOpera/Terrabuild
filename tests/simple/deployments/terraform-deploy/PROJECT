
project @terraform {
    depends_on = [ project.dotnet_app
                   project.npm_app ]
    ignores = [ "deploy.log" ]
    labels = [ "infra" ]
}

target build {
    @terraform plan { 
        variables = { dotnet_app_version: project.dotnet_app.version
                     npm_app_version: project.npm_app.version }
    }
}

target deploy {
    @terraform apply { }
}
