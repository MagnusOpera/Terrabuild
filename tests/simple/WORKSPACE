
workspace {
}

configuration {
  variables = {
    configuration: "Debug"
    secret_message: "tagada"
    npm_version: "1.0.0"
    workspace: "default"
  }
}

configuration release {
  variables = {
    configuration: "Release"
    workspace: "default"
  }
}

target build {
  depends_on = [ ^build ]
}

target dist {
  depends_on = [ build ]
}

target docker {
  depends_on = [ dist ]
}

target push {
  depends_on = [ docker ]
}

target deploy {
  depends_on = [ push ]
}

extension @dotnet {
  container = "mcr.microsoft.com/dotnet/sdk:9.0.202"
  platform = "linux/amd64"
  defaults = {
    configuration: $configuration
  }
}

extension @terraform {
  container = "hashicorp/terraform:1.10"
  platform = "linux/amd64"
  defaults = {
    workspace: $workspace
  }
}

extension @cargo {
  container = "rust:1.81.0-slim"
  platform = "linux/amd64"
}

extension @npm {
  container = "node:20"
  platform = "linux/amd64"
}

extension @openapi {
  container = "openapitools/openapi-generator-cli:v7.10.0"
  platform = "linux/amd64"
}
