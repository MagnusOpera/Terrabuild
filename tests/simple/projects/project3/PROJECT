builders:
  dotnet:
    use: dotnet
    with: project3.csproj

  docker:
    use: docker
    with: Dockerfile
    parameters:
      $configuration: $(configuration)
      image: ghcr.io/magnus-opera/project3

steps:
  build:
    - (dotnet): build

  publish:
   - (dotnet): publish

  docker:
   - (docker): build

  push:
   - (docker): push
     tag: 666
