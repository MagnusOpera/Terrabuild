extensions:
  - (dotnet): project3.csproj
  - (docker): Dockerfile

steps:
  build:
    - (dotnet): build
      configuration: $(configuration)

  publish:
   - (dotnet): publish
     configuration: $(configuration)

  docker:
   - (docker): build
     image: ghcr.io/magnus-opera/project3
     $configuration: $(configuration)

  push:
   - (docker): push
     image: ghcr.io/magnus-opera/project3
     tag: 666
