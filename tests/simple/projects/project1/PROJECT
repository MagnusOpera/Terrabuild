builders:
  make:
    with: Makefile

dependencies:
  - ../../libraries/library1

outputs:
  - dist

targets:
  publish: [ build ]

steps:
  build:
    - (echo): "building project1"
    - (make): build
      parameters:
        secret: $(secret_message)

  publish:
    - (shell): echo
      arguments: "publishing project1"
    - (shell): make
      arguments: publish
