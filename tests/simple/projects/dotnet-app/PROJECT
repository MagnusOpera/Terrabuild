
extension @docker {
    defaults {
        image = "ghcr.io/magnusopera/dotnet-app"
        arguments = { configuration: configuration }
    }
}

project @dotnet {
    labels = [ "app"
               "dotnet" ]

    includes = [ "**/*"
                 "../shared-folder/**/*" ]
}

target build {
#    @shell echo { arguments: "Building project"}
    @dotnet build { }
#    @shell echo { arguments: "Building done"}
}

target dist {
    @dotnet publish { }
}

target docker {
    @docker build { }
}
