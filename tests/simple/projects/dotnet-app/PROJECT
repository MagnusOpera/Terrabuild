extension dotnet { }

extension docker {
    parameters {
        image: "ghcr.io/magnusopera/dotnet-app"
    }
}

configuration {
    labels = [ "app"
               "dotnet" ]
}

target build {
    dotnet build { }
}

target dist {
    dotnet publish { }
}

target docker {
    docker build { configuration: $configuration }
}

target push {
    docker push { }
}
