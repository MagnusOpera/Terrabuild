extension dotnet {
    script = "../../scripts/dotnet.fsx"

    init { }
}

extension docker {
    script = "../../scripts/docker.fsx"
    init {
        image: "ghcr.io/magnusopera/dotnet-app"
    }
}

configuration {
    labels = [ "app"
               "dotnet" ]
}

target build {
    dotnet build { }
}

target dist {
    dotnet publish { }
}

target docker {
    docker build { }
}

target push {
    docker push { }
}
