
extension @docker {
    container = "docker:25.0"
    defaults = {
        image: "ghcr.io/magnusopera/dotnet-app"
        arguments: { configuration: $configuration }
    }
}

configuration @dotnet {
    labels = [ "app"
               "dotnet" ]
}

target build {
    @dotnet build { }
}

target dist {
    @dotnet publish { }
}

target docker {
    @docker build { }
}

target push {
    @docker push { }
}
